<h1>Rent a Cat</h1>

<form action="<%= rental_requests_url %>" method="POST">
  <label>Select your desired cat
    <select name = "cat_rental_request[cat_id]">
      <% Cat.all.each do |cat| %>
        <option value="<%= cat.id %>"><%= cat.name %></option>
      <% end %>
    </select>
  </label><br>

  <label>
    Start Date:
    <input type="date" name ="cat_rental_request[start_date]"></input>
  </label><br>

  <label>
    End Date:
    <input type="date" name ="cat_rental_request[end_date]"></input>
  </label><br>

  <button>Book your cat!</button>
</form>